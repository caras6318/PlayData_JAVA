package com.kjh;

//MethodClass : 프로젝트에 필요한 공통적인 메소드들만 보유하는 클래스
public class MethodClass {

	public MethodClass() { // 기본 생성자
		
	}
	//MainClass 의 main()내에서 호출 
	//main()에서는 실제 데이터들을 보유한 members 배열을 전달 
	public void age(MemberClass[] members){
		String temp = members[0].firstNo.substring(0,2);
		String temp2 = members[0].lastNo.substring(0,1);
		if(Integer.parseInt(temp2) > 2) {
			int age = 2023 - (1900 + Integer.parseInt(temp));
		}else {
			int age = 2023 - (2000 + Integer.parseInt(temp));
		}
		System.out.print(age);
	}
}